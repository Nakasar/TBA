<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tech.orochi.testtba.MainActivity"
    android:orientation="vertical">

    <fragment
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:name="tech.orochi.testtba.NavigationMenu"
        android:id="@+id/navigation_menu"
        tools:layout="@layout/navigation_menu"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp" />

    <fragment
        android:id="@+id/light1"
        android:name="tech.orochi.testtba.LightSlider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout="@layout/light_slider"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp" />
</LinearLayout>